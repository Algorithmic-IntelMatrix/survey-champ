generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum SurveyStatus {
  DRAFT
  PUBLISHED
}

enum Mode {
  LIVE
  TEST
}

enum ResponseStatus {
  COMPLETED
  DROPPED
  DISQUALIFIED
  OVER_QUOTA
  IN_PROGRESS
  CLICKED
  QUALITY_TERMINATE
  SECURITY_TERMINATE
}

model User {
  id            String         @id @default(uuid())
  email         String         @unique
  password      String
  name          String
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  surveys       Surveys[]
  refreshTokens RefreshToken[]

  @@map("users")
}

model RefreshToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@map("refresh_tokens")
}

model Surveys {
  id                   String           @id @default(uuid())
  name                 String
  description          String
  client               String
  createdAt            DateTime         @default(now())
  updatedAt            DateTime         @updatedAt
  userId               String
  user                 User             @relation(fields: [userId], references: [id])
  surveyWorkflow       SurveyWorkflow[]
  surveyResponses      SurveyResponse[]
  surveyMetrics        SurveyMetrics[]
  webhookUrl           String?
  redirectUrl          String?
  overQuotaUrl         String?
  securityTerminateUrl String?
  globalQuota          Int?
  surveyQuotas         SurveyQuota[]

  @@map("surveys")
}

model SurveyWorkflow {
  id          String       @id @default(uuid())
  runtimeJson Json
  designJson  Json
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  surveyId    String
  status      SurveyStatus @default(DRAFT)
  survey      Surveys      @relation(fields: [surveyId], references: [id])

  @@map("survey_workflows")
}

model SurveyResponse {
  id           String         @id @default(uuid())
  surveyId     String
  survey       Surveys        @relation(fields: [surveyId], references: [id])
  mode         Mode           @default(TEST)
  response     Json
  status       ResponseStatus @default(IN_PROGRESS)
  outcome      String?
  respondentId String?
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt

  @@map("survey_responses")
}

model SurveyMetrics {
  id                String   @id @default(uuid())
  surveyId          String
  survey            Surveys  @relation(fields: [surveyId], references: [id])
  mode              Mode     @default(TEST)
  qualityTerminate  Int      @default(0)
  securityTerminate Int      @default(0)
  completed         Int      @default(0)
  dropped           Int      @default(0)
  disqualified      Int      @default(0)
  overQuota         Int      @default(0)
  clicked           Int      @default(0)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@unique([surveyId, mode])
  @@map("survey_metrics")
}

model SurveyQuota {
  id        String   @id @default(uuid())
  surveyId  String
  survey    Surveys  @relation(fields: [surveyId], references: [id])
  rule      Json // Stores the logic (nodeId, operator, value)
  limit     Int
  enabled   Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("survey_quotas")
}
